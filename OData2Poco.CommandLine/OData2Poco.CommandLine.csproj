<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFrameworks>netcoreapp2.0;net45</TargetFrameworks>
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
    <ApplicationIcon>ODataLogo-32.ico</ApplicationIcon>
    <AssemblyName>O2Pgen</AssemblyName>
    <AssemblyTitle>OData2Poco.CommandLine</AssemblyTitle>
    <GenerateAssemblyConfigurationAttribute>false</GenerateAssemblyConfigurationAttribute>
    <Version>3.0.0</Version>
    <Copyright>Copyright ©  Mohamed Hassan 2016</Copyright>
    <Authors>Mohamed Hassan</Authors>
    <Company>OData2Poco</Company>
    <Product>O2Pgen</Product>
    <Description>
      o2gen is a CommandLine tool for generating c# POCO classes from OData feeds.
      Project site: https://github.com/moh-hassan/odata2poco
    </Description>
    <OutputPath>bin\$(Configuration)\</OutputPath>
    <PackageIconUrl>https://github.com/moh-hassan/odata2poco/blob/master/ODataLogo-32.ico?raw=true </PackageIconUrl>
    <PackageId>OData2Poco.CommandLine</PackageId>
    <PackageLicenseUrl>https://github.com/moh-hassan/odata2poco/blob/master/license.txt?raw=true</PackageLicenseUrl>
    <PackageProjectUrl>https://github.com/moh-hassan/odata2poco</PackageProjectUrl>
    <PackageReleaseNotes>
      Version: $(version)
      What is new:
      - Maintainance: Migrating to vs2017 and c#7
      - New: Support colored Console
      - New: Support NetStandard2.0,NetStandard1.1 and net45

    </PackageReleaseNotes>
    <PackageTags>OData poco code-generation</PackageTags>
    <LangVersion>7.3</LangVersion>
  </PropertyGroup>

  <ItemGroup>
    <Compile Include="..\Version.cs" Link="Version.cs" />
  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="..\OData2PocoLib\OData2Poco.csproj" />
  </ItemGroup>

  <ItemGroup>
    <!-- <PackageReference Include="CommandLineParser" Version="1.9.71" /> -->
    <PackageReference Include="CommandLineParser" Version="2.3.0" />
  </ItemGroup>

  <PropertyGroup Condition=" '$(Configuration)|$(Platform)' == 'Debug|AnyCPU' ">
    <DebugType>full</DebugType>
  </PropertyGroup>
  <PropertyGroup Condition=" '$(Configuration)|$(Platform)' == 'Release|AnyCPU' ">
    <DebugType>pdbonly</DebugType>
  </PropertyGroup>

</Project>