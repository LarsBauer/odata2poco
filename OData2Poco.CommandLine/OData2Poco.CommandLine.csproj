<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net45</TargetFramework>
    <AssemblyName>O2Pgen</AssemblyName>
    <Authors>Mohamed Hassan</Authors>
    <Product>OData2Poco.CommandLine</Product>
    <Description>o2gen is a CommandLine tool for generating c# and vb.net POCO classes from OData feeds.</Description>
  </PropertyGroup>

  <Import Project="$(MSBuildProjectDirectory)\fody.props" Condition=" '$(Configuration)' == 'Release' " /> 
  <!--<Import Project="$(MSBuildProjectDirectory)\ilmerge.targets"  Condition=" '$(Configuration)' == 'Release' "/>--> 

  <ItemGroup>
    <ProjectReference Include="..\OData2Poco.Core\OData2Poco.Core.csproj">
      <PrivateAssets>All</PrivateAssets>
    </ProjectReference>
  </ItemGroup> 

  <PropertyGroup>
    <ApplicationIcon>ODataLogo-32.ico</ApplicationIcon>
    <SignAssembly>false</SignAssembly>
    <AssemblyOriginatorKeyFile>odata2poco.snk</AssemblyOriginatorKeyFile>
  </PropertyGroup>

  <PropertyGroup Condition=" '$(Configuration)|$(Platform)' == 'Debug|AnyCPU' ">
    <DebugType>full</DebugType>
  </PropertyGroup>
  <PropertyGroup Condition=" '$(Configuration)|$(Platform)' == 'Release|AnyCPU' ">
    <DebugType>none</DebugType>
  </PropertyGroup>
</Project>